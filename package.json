{
  "name": "@faim-group/mcp",
  "version": "0.1.3",
  "description": "MCP server for FAIM forecasting SDK - Enables Claude to perform time series forecasting using Chronos2 and TiRex models",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "faim-mcp": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --exclude tests/integration",
    "test:integration": "vitest tests/integration",
    "test:all": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "forecasting",
    "chronos2",
    "tirex",
    "time-series"
  ],
  "author": "",
  "license": "MIT",
  "homepage": "https://faim.it.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/S-FM/faim-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/S-FM/faim-mcp/issues"
  },
  "type": "module",
  "dependencies": {
    "@faim-group/sdk-forecasting": "^0.1.1",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/ui": "^1.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
